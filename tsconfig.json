{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "inlineSources": true,
    "sourceMap": true
  },
  "include": ["main.ts"]
}

